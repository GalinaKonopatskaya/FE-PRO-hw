<%- include ('layout/header.ejs'); -%>


    <div class="container">
        <h1>Home</h1>
        <div class="slider">
            <div class="slider-line">
                <img src="https://vchaspik.ua/sites/default/files/styles/600x/public/story/u12449/0_118.jpg?itok=Hq60azmR"
                    alt="">

            </div>
        </div>
        <button class="slider-prev">Prev</button>
        <button class="slider-next">Next</button>



        <div class="select-grupe">
            <select name="sortProduct" id="productSelectBy">
                <option value="all">Все товары</option>
                <option value="priceLow">Цена по убыванию</option>
                <option value="priceHigh">Цена по возрастанию</option>
                <option value="newProduct">Новинки</option>
                <option value="promotions">Акционные</option>
            </select>
            <select name="categoriSelect" id="categoriSelect">
                <option value="">Выберите категорию</option>

            </select>
        </div>

        <div id="renderProduct">
            <div class="select-grupe">
                <select name="sortProduct" id="productSelectBy">
                    <option value="all">Все товары</option>
                    <option value="priceLow">Цена по убыванию</option>
                    <option value="priceHigh">Цена по возрастанию</option>
                    <option value="newProduct">Новинки</option>
                    <option value="promotions">Акционные</option>
                </select>
                <select name="categoriSelect" id="categoriSelect">
                    <option value="">Выберите категорию</option>

                </select>
            </div>

            <ul id="productList">
                <% products.forEach(function(product){ %>
                    <li class="product-card">
                        <figure>
                            <img class="product-img" src="/images/img/ <%= product.img %>">
                            <figcaption>
                                <a href="/product?id=<%= group.id %>&name=<%= product.name %>" class="border-button">
                                    <h2>
                                        <%= product.name %>
                                    </h2>
                                </a>
                                <div class="cost">
                                    <h3 class="price"> Цена за 1шт. <%= product.cost %>
                                    </h3>
                                    <h3 class="price"> Итого: 00.00</h3>
                                </div>

                                <div class="quantity">
                                    <input type="number" id="count" min="0" value="0">
                                </div>
                                <button type="button">В корзину</button>
                            </figcaption>
                            <% }); %>
                        </figure>
                    </li>


            </ul>

        </div>




